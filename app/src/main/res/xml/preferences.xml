<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<ListPreference
    android:entries="@array/guesses_list"
    android:entryValues="@array/guesses_list"
    android:key="pref_numberOfChoices"
    android:title="@string/number_of_choices"
    android:summary="@string/number_of_choices_description"
    android:persistent="true"
    android:defaultValue="9"/>

<MultiSelectListPreference
    android:entries="@array/race_list"
    android:entryValues="@array/race_list"
    android:key="pref_raceToInclude"
    android:title="@string/races"
    android:summary="@string/races_description"
    android:persistent="true"
    android:defaultValue="@array/race_list"/>

</PreferenceScreen>